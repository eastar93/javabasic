package Polymorphism.game;

public class Goblin extends Monster {
	
	public Goblin() 
	{
		super("Goblin",50,9,3);
	}
	
	public void hunt(Monster monster)
	{
		if (monster.getHp()<=0)
		{
			System.out.printf("%s는 이미 죽은 유닛입니다.%n", getName());
			System.out.println("----------------------------------------------");
			return;
		}
		monster.setHp(getAtk());
		if(getAtk()<=monster.getDef())
		{
			System.out.printf("%s는 고블린의 방어력이 높아 데미지를 못입혔습니다.%n" ,monster.getName());
			System.out.println("----------------------------------------------");
		}
		else if(monster.getHp()>0)
		{
			System.out.printf("고블린이 %s에게 %d만큼의 데미지를 주었습니다.%n",monster.getName(),getAtk()-monster.getDef());
			System.out.println("----------------------------------------------");
			monster.MonsterData();			
		}
		else if(monster.getDHp()<=0)
		{
			System.out.println("고블린이 %s에 의해 사망하였습니다.");
		}
	}

	
	
	
}


	
	