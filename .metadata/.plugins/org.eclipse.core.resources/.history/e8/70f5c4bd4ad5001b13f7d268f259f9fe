package AccessModifier.game;

public class Commoner {
	private int Lv;
	private int Hp;
	private int Mp;
	private int Atk;
	private int Def;
	private int Exp;

	
	public Commoner() {
		this.Lv = 1;
		this.Hp = 20;
		this.Mp = 15;
		this.Atk = 5;
		this.Def = 3;
		this.Exp = 0;
	}
	public int getLv() {
		return Lv;
	}
	public void setLv(int lv) {
		Lv = lv;
	}
	public int getHp() {
		return Hp;
	}
	public void setHp(int hp) {
		Hp = hp;
	}
	public int DHp(int a) {
		return Hp-=a;
	}
	public int getMp() {
		return Mp;
	}
	public void setMp(int mp) {
		Mp = mp;
	}
	public int getAtk() {
		return Atk;
	}
	public void setAtk(int atk) {
		Atk = Atk+atk;
	}
	public int getDef() {
		return Def;
	}
	public void setDef(int def) {
		Def = Def+def;
	}
	public int DMp(int a) {
		return Mp-=a;
	}
	public int getExp() {
		return Exp;
	}
	public int IExp(int a) {
		return Exp+=a;
	}
	public void setExp(int exp) {
		Exp = exp;
	}

	public void getInfo()
	{
		System.out.printf("Lv : %d%n",Lv);
		System.out.printf("Hp : %d%n",Hp);
		System.out.printf("Mp : %d%n",Mp);
		System.out.printf("Atk : %d%n", Atk);
		System.out.printf("Def : %d%n", Def);
		System.out.printf("Exp : %d%n",Exp);
		System.out.println("------------------------");
	}
}
