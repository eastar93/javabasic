package Polymorphism.game;

public class Warrior extends Monster {
	
	public Warrior() 
	{
		super("Warrior",30,7,1);
	}

	public void hunt(Monster monster)
	{
		if (monster.getHp()<=0)
		{
			System.out.printf("%s는 이미 죽은 유닛입니다.%n", monster.getName());
			System.out.println("----------------------------------------------");
			return;
		}
		monster.setHp(getAtk());
		if(getAtk()<=monster.getDef())
		{
			System.out.printf("%s는 전사의 방어력이 높아 데미지를 못입혔습니다.%n" ,monster.getName());
			System.out.println("----------------------------------------------");
		}
		else if(monster.getHp()>0)
		{
			System.out.printf("전사가 %s에게 %d만큼의 데미지를 주었습니다.%n",monster.getName(),getAtk()-monster.getDef());
			System.out.println("----------------------------------------------");
			monster.MonsterData();			
		}
		else if(monster.getDHp()<=0)
		{
			System.out.printf("%s가 %s에 의해 사망하였습니다.",Ms.getName(),name);
			System.out.printf("경험치 %d를 얻었습니다.%n",Ms.getExp());
			getExp();
			if(monster.getHp()<0)
			{
				monster.setHp(0);
			}
			System.out.println("----------------------------------------------");
		}
	}
}
