package Polymorphism.game;

public class Warrior extends Monster {
	
	public Warrior() 
	{
		super("Warrior",30,7,1);
	}

	public void huntWr(Elf elf)
	{
		if (elf.getHp()<=0)
		{
			System.out.println("검사는 이미 죽은 유닛입니다.");
			System.out.println("----------------------------------------------");
			return;
		}
		elf.setHp(atk);
		if(atk<elf.getDef())
		{
			System.out.println("검사는 엘프의 방어력이 높아 데미지를 못입혔습니다.");
			System.out.println("----------------------------------------------");
		}
		else if(elf.getHp()>0)
		{
			System.out.printf("검사가 엘프에게 %d만큼의 데미지를 주었습니다.%n",getAtk()-elf.getDef());
			System.out.println("----------------------------------------------");
			elf.MonsterData();			
		}
	}
}
