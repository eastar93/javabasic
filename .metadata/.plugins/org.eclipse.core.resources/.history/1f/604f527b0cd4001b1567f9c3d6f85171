package Ver02;

public class Marine extends Unit {
	

		
		public void getInfo()
		{
			System.out.println("유닛 스펙");
			System.out.println("-------------------------------------------");
			System.out.println("종족 :" + getTribe());
			System.out.println("공격형태 :" + getType());
			System.out.println("유닛 이름 :" + getName());
			System.out.println("유닛 크기 :" + getSize());
			System.out.println("체력 :" + getHP());
			System.out.println("공격속도 :" + getAS());
			System.out.printf("공격력 : %d(+%d)%n",getAP(),getAVT());
			System.out.printf("방어력 :%d(+%d)%n",getSP(),getSVT());
			System.out.println("-------------------------------------------");
		}
		
		public void APUpgrade()
		{
			
			if(getHP()>0 && getHP()<=40)
			{
				getAVT();
				getAPT();
				System.out.println("공격력 업그레이드 완료");
				System.out.printf("공격력 %d증가%n",getAV());
				System.out.println("-------------------------------------------");
			}
			else if(getHP()<=0)
			{
				System.out.println("더이상 공격력 업그레이드가 되지 않습니다.");
				System.out.println("-------------------------------------------");
			}
			
			
		}
		public void SPUpgrade()
		{
			if(getHP()>0 && getHP()<=40)
			{
				getSVT();
				getSPT();
				System.out.println("방어력 업그레이드 완료");
				System.out.printf("방어력 %d증가%n",getSV());
				System.out.println("-------------------------------------------");
				
			}
			else if(getHP()<=0)
			{
				System.out.println("더이상 방어력 업그레이드가 되지 않습니다.");
				System.out.println("-------------------------------------------");
			}
		}
		
		public void SPPower()
		{
			if(getSP()>15)
			{
				System.out.println("더이상 저글링 히드라 울트라 모두에게 데미지를 받지 않습니다.");
				System.out.println("-------------------------------------------");
			}
			else if(getSP()>7)
				
			{
				System.out.println("더이상 저글링과 히드라에게 데미지를 받지 않습니다.");
				System.out.println("-------------------------------------------");
			}
			else if(getSP()>3)
			{			
				System.out.println("더이상 저글링에게 데미지를 받지 않습니다.");
				System.out.println("-------------------------------------------");
			}
			else if(getSP()==0)
			{
				System.out.println("방어력이 낮습니다.");
				System.out.println("업그레이드가 필요합니다.");
			}
		}
		public void Stimpack()
		{
			getSTP();
			getAST();
			if(getHP() > 0)
			{
				System.out.println("스팀팩을 사용했습니다.");
				System.out.printf("공격속도가 %d증가했습니다",getASV());
				System.out.printf("남은 체력은 %d입니다%n",getHP());
				System.out.println("-------------------------------------------");
			}
			else if(getHP()<=1)
			{
				System.out.println("더이상 스팀팩을 사용 할 수 없습니다.");
				System.out.println("-------------------------------------------");
			}
		}
		public void GetHurtSmallUnit()
		{
			
			if(getZCS()<0)
			{
				getZD();
				System.out.printf("소형유닛에게 %d만큼 데미지를 입었습니다.%n",3-SP);
				System.out.println("-------------------------------------------");
				if (HP<0)
				{
					HP=0;
					System.out.println("유닛의 체력이 바닥나 죽었습니다.");
					System.out.println("-------------------------------------------");
				}
				else
				{
					System.out.println("유닛이 죽지 않았습니다.");
					System.out.printf("남은 체력은 %d입니다%n", HP);
					System.out.println("-------------------------------------------");
				}
			}
			else if((SP-3)>=0)  
			{
				System.out.println("소형유닛에게 데미지를 입지 않았습니다.");
				System.out.println("-------------------------------------------");
			}
		}
		public void GetHurtMedium()
		{
			
			if((SP-7)<0)
			{	
				HP += (SP-7);
				System.out.printf("중형유닛에게 %d만큼 데미지를 입었습니다.%n",7-SP);
				System.out.println("-------------------------------------------");
				if (HP<0)
				{
					HP=0;
					System.out.println("유닛의 체력이 바닥나 죽었습니다.");
					System.out.println("-------------------------------------------");
				}
				else
				{
					System.out.println("유닛이 죽지 않았습니다.");
					System.out.printf("남은 체력은 %d입니다%n", HP);
					System.out.println("-------------------------------------------");
				}
			}
			else if((SP-7)>=0)  
			{
				System.out.println("중형유닛에게 데미지를 입지 않았습니다.");
				System.out.println("-------------------------------------------");
			}
		}
		public void GetHurtBig()
		{
			
			if((SP-15)<0)
			{
				HP+=(SP-15);
				System.out.printf("대형유닛에게 %d만큼 데미지를 입었습니다.%n",15-SP);
				System.out.println("-------------------------------------------");
				if (HP<=0)
				{
					HP=0;
					System.out.println("유닛의 체력이 바닥나 죽었습니다.");
					System.out.println("-------------------------------------------");
				}
				else
				{
					System.out.println("유닛이 죽지 않았습니다.");
					System.out.printf("남은 체력은 %d입니다%n", HP);
					System.out.println("-------------------------------------------");
				}
			}
			else if((SP-15)>=0)  
			{
				System.out.println("대형유닛에게 데미지를 입지 않았습니다.");
				System.out.println("-------------------------------------------");
			}

		}
		public void Cure()
		{
			if(HP>0 && HP<40)
			{
				HP+=Heal;
				if((HP+=Heal)>40)
				{
					HP=40;
				}
				System.out.println("치료가 되었습니다.");
				System.out.printf("현재 체력은 %d입니다%n",HP);
				System.out.println("-------------------------------------------");
			}
			else if((HP+=Heal)>40)
			{
				HP = 40;
				System.out.println("더이상 회복되지 않습니다.");
				System.out.println("-------------------------------------------");
			}
			else if(HP <= 0)
			{ 
				System.out.println("이 유닛의 체력은 0이하입니다.");
				System.out.println("이 유닛은 살릴 수 없는 유닛입니다.");
				System.out.println("-------------------------------------------");
			}
		
		}
}
				 


