package Polymorphism.game;

import Interation.game.Gladiator;

public class Goblin extends Monster {
	
	public Goblin() 
	{
		super("Goblin",50,9,3);
	}
		
	public void getElfInfo()
	{
		System.out.printf("고블린의 체력은 %d입니다.%n",hp);
		System.out.printf("고블린의 공격력은 %d입니다.%n");
		System.out.printf("고블린의 방어력은 %d입니다.%n");
		System.out.println("----------------------------------------------");
	}
	
	public void huntGd(Warrior Wr)
	{
		if (Wr.getHp()<=0)
		{
			System.out.println("검사는 이미 죽은 유닛입니다.");
			System.out.println("----------------------------------------------");
			return;
		}
		Wr.setHp(atk);
		if(atk<=Gd.getDef())
		{
			System.out.println("검사는 고블린의 방어력이 높아 데미지를 못입혔습니다.");
			System.out.println("----------------------------------------------");
		}
		else if(Wr.getHp()>0)
		{
			System.out.printf("고블린이 검사에게 %d만큼의 데미지를 주었습니다.%n",getAtk()-Wr.getDef());
			System.out.println("----------------------------------------------");
			Wr.MonsterData();			
		}
	}

	
	
	
}


	
	