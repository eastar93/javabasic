package BuyandSell;

public class Buyer {
	//구매자
	//구매자는 돈, 망고갯수를 멤버변수로 가집니다.
	//은닉 구현을 위해 private으로 처리합니다.
	
	//생성자는 (int money)를 받아 돈을 초기화합니다.
	//망고는 자동으로 0을 대입합니다.
	
	//buyMango는 망고를 합니다.
	//(int mango)로 망고 갯수를 입력받으면, 망고*1000만큼의
	//돈을 차감하고 망고 변수에 그 만큼 갯수를 늘려줍니다.
	
	//showBuyer는 구매자의 상태를 보여줍니다.
	//money, mango 수치가 각각 몇인지 콘솔에 찍어줍니다.
	
	private int money;
	private int mango;
	
	public Buyer(int money) {
		this.money = money;
		this.mango = 0;
	}
	
	public void buyMango(int m)
	{
		if((m*1000)>money)
		{
			System.out.printf("망고를 %d개 만큼 살 돈이 없습니다 %n",m);
			return;
		}
		money -= (m*1000);
		mango += m;
		System.out.printf("망고를 %d개 구매 했습니다.%n",m);
	}
	public void sellMango(int m)
	{
		if(m*1000<money)
		{
			System.out.println("더이상 판매 할 망고가 없습니다.");
			return;
		}
		money += m*1000;
		mango -= m;
		System.out.printf("남은 망고는 %d개입니다.%n",mango);
		System.out.printf("벌어들인 돈은 %d원입니다.%n",money);
	}
	public void showBuyer()
	{
		System.out.printf("남은 돈은 %d원 입니다.%n",money);
		System.out.printf("망고 갯수는 %d개 입니다.%n",mango);
	}

}
