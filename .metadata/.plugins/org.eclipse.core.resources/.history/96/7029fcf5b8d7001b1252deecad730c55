package Polymorphism.game;

public class Warrior extends Monster{
	
	public Warrior() 
	{
		super("Warrior",30,7,1);
	}
		
	public void getWarriorInfo()
	{
		System.out.printf("검사의 체력은 %d입니다.%n",hp);
		System.out.printf("검사의 공격력은 %d입니다.%n",atk);
		System.out.printf("검사의 방어력은 %d입니다.%n",def);
		System.out.println("----------------------------------------------");
	}
	
	public void huntWr( Wr)
	{
		if (Wr.getHp()<=0)
		{
			System.out.println("검사는 이미 죽은 유닛입니다.");
			System.out.println("----------------------------------------------");
			return;
		}
		Wr.setHp(atk);
		if(atk<=Wr.getDef())
		{
			System.out.println("검사는 엘프의 방어력이 높아 데미지를 못입혔습니다.");
			System.out.println("----------------------------------------------");
		}
		else if(Wr.getHp()>0)
		{
			System.out.printf("검사가 엘프에게 %d만큼의 데미지를 주었습니다.%n",getAtk()-Wr.getDef());
			System.out.println("----------------------------------------------");
			Wr.getGdInfo();			
		}
	}
}
