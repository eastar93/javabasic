package Constructor;

public class StarCraft {
	
	public String tribe;
	public String type;
	public String name;
	public String size;
	public int HP;
	public int AP;
	public int AV;
	public int SP;
	public int SV;
	
	public StarCraft(String tr, String ty, String n, String s, int H, int A, int S)
	{
		tribe = tr;
		type = ty;
		name = n;
		size = s;
		HP = H;
		AP = A;
		SP = S;
		AV = 0;
		SV = 0;
	}
	
	public void getInfo()
	{
		System.out.println("종족 :" + tribe);
		System.out.println("공격형태 :" + type);
		System.out.println("유닛 이름 :" + name);
		System.out.println("유닛 크기 :" + size);
		System.out.println("체력 :" + HP);
		System.out.println("공격력 :" + AP);
		System.out.println("방어력 :" + SP);
	}
	
	public void APUpgrade()
	{
		if(HP>0 && HP<=40)
		{
			AV+=2;
			System.out.printf("공격력 : %d(+%d)%n",AP+AV,AV);
			getInfo();
		}
		else if(HP<=0)
		{
			System.out.println("더이상 공격력 업그레이드가 되지 않습니다.");
		}
		
	}
	public void SPUpgrade()
	{
		if(HP>0 && HP<=40)
		{
			SV+=2;
			System.out.printf("방어력 : %d(+%d)%n",SP+SV,SV);
			
		}
		else if(HP<=0)
		{
			System.out.println("더이상 방어력 업그레이드가 되지 않습니다.");
		}
		getInfo();
	}
	public void Stimpack()
	{
		HP-=5;
		if(HP >=1)
		{
			System.out.println("스팀팩을 사용했습니다.");
		}
		else
		{
			HP=0;
			System.out.println("더이상 스팀팩을 사용 할 수 없습니다.");
		}
	}
	public void GetHurtZergling()
	{
		
		if((SP-3)<0)
		{
			HP += (SP-3);
			System.out.println("저글링에게 데미지를 입었습니다.");
			if (HP<0)
			{
				HP=0;
				System.out.println("저글링에게 유닛이 죽었습니다.");
			}
			else
			{
				System.out.println("유닛이 죽지 않았습니다.");
			}
		}
		else if((SP-3)>=0)  
		{
			System.out.println("저글링에게 데미지를 입지 않았습니다.");
		}
	}
	public void GetHurtHydra()
	{
		
		if((SP-7)<0)
		{	
			HP += (SP-7);
			System.out.println("히드라에게 데미지를 입었습니다.");
			if (HP<0)
			{
				HP=0;
				System.out.println("히드라에게 유닛이 죽었습니다.");
			}
			else
			{
				System.out.println("유닛이 죽지 않았습니다.");
			}
		}
		else if((SP-7)>=0)  
		{
			System.out.println("히드라에게 데미지를 입지 않았습니다.");
		}
	}
	public void GetHurtUltra()
	{
		
		if((SP-15)<0)
		{
			HP+=(SP-15);
			System.out.println("울트라에게 데미지를 입었습니다.");
			if (HP<=0)
			{
				HP=0;
				System.out.println("울트라에게 유닛이 죽었습니다.");
			}
			else
			{
				System.out.println("유닛이 죽지 않았습니다.");
			}
		}
		else if((SP-15)>=0)  
		{
			System.out.println("울트라에게 데미지를 입지 않았습니다.");
		}

	}
	public void Cure()
	{
		if(HP>=40)
		{
			HP = 40;
			System.out.println("더이상 회복되지 않습니다.");
		}
		else if(HP>0 && HP<40)
		{
			HP += 15;
			if(HP>40)
			{
				HP=40;
			}
		}
		else if(HP <= 0)
		{ 
			System.out.println("이 유닛은 죽은 유닛입니다.");
		}
	}
}
